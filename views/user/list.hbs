<h3><a class="btn btn-secondary" href="/">Back</a> Users List</h3>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        {{#each list}}
        <tr>
            <td>{{this.name}}</td>
            <td>
                <a class="btn btn-primary btn-sm" href="/user/{{this.id}}">Edit</a>
                <a class="btn btn-primary btn-sm" href="/user/delete/{{this.id}}"
                    onclick="return confirm('Are you sure you want to delete this record?');">Delete</a>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>