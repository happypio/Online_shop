<h3>{{viewTitle}}</h3>

<form action='/product' method='POST' autocomplete='off' enctype="multipart/form-data">
    <input type="hidden" name="_id" value="{{product.id}}">
    <div class="form-row">
        <div class="form-group col-md-6">
            <label>Name</label>
            <input type="text" class="form-control" name="name" placeholder="Name" value="{{product.name}}" required>
        </div>
        <div class="form-group col-md-6">
            <label>Mobile</label>
            <input type="text" class="form-control" name="mobile" placeholder="Mobile" value="{{product.mobile}}" required>
        </div>
    </div>
    <div class="form-group">
        <label>Specification</label>
        <textarea rows = "5" cols = "60" style="height:200px;" type="text" class="form-control" name="specification" placeholder="Specification" value="{{product.specification}}" required>{{product.specification}}</textarea>
    </div>
    <div class="form-group">
        <label>Image</label>
        <input type="file" class="form-control" name="img" placeholder="Image" value="{{product.img}}">
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-info">Submit</button>
        <a class="btn btn-secondary" href="/product/list">View All</a>
    </div>
</form>