    <div class="form-row">
        <div class="form-group col-md-6">
            <label>Name</label>
            <input type="text" class="form-control" name="name" placeholder="Name" value="{{product.name}}" readonly>
        </div>
        <div class="form-group col-md-6">
            <label>Mobile</label>
            <input type="text" class="form-control" name="mobile" placeholder="Mobile" value="{{product.mobile}}" readonly>
        </div>
    </div>
    <div class="form-group">
        <label>Specification</label>
        <textarea rows = "5" cols = "60" style="height:200px;" type="text" class="form-control" name="specification" placeholder="Specification" value="{{product.specification}}" readonly>{{product.specification}}</textarea>
